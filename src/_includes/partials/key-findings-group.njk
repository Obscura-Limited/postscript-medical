{% set group = groupContent %}

<ul class="key-findings-group auto-grid">
    {% for entry in group %}
    <li>
        <figure>
            <svg class="percentage-ring" viewBox="0 0 100 100" width="100" height="100">
                <text x="52.5%" y="57.5%" text-anchor="middle">
                    {{ entry.percentage }}%
                </text>

                <path
                    fill-rule="evenodd"
                    d="
                    M 0, 50
                    a 50,50 0 1,0 100,0
                    a 50,50 0 1,0 -100,0

                    M 10, 50
                    a 40,40 0 1,0 80,0
                    a 40,40 0 1,0 -80,0
                    "
                />

                <circle cx="50" cy="50" r="45" fill="none" stroke-width="10" stroke-dasharray="100" />
            </svg>

            <figcaption>
                {{ entry.summary }}
            </figcaption>
        </figure>
    </li>
    {% endfor %}
</ul>